alias ...="cd ../.."
alias ..="cd .."
alias aliases="v ~/.zsh/aliases"
alias b="bundle"
alias be="bundle exec"
alias c="clear"
alias cat="bat --theme=\$(defaults read -globalDomain AppleInterfaceStyle &> /dev/null && echo OneHalfDark || echo OneHalfLight)"
alias g="git status -sb"
alias gap="git add -p"
alias gcam="git commit -am"
alias gp="git p"
alias ll="ls -alhG"
alias ln="ln -v"
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias mkdir="mkdir -p"
alias path='echo $PATH | tr -s ":" "\n"'
alias podia='tmuxinator start podia'
alias pubkey="cat ~/.ssh/id_rsa.pub | pbcopy | echo 'Public key copied to clipboard!'"
alias rc="bundle exec rails c"
alias reload="source ~/.zshrc && echo 'Reloaded!'"
alias rr="bundle exec rails routes"
alias s="rspec"
